<Window x:Class="Aula2808_WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Aula2808_WPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="5*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="8*"/>
        </Grid.ColumnDefinitions>
        <!--O stackPanel e o Gtrid são "blocos" em que são colocados os elementos-->
        <!--Grid não leva a definição dos elementos dentro, para isso é usado o painel-->
        <StackPanel HorizontalAlignment="Center"  VerticalAlignment="Center" Orientation="Vertical" Grid.Row="1" 
                    Grid.Column="1" Width="100px" Height="100px">
            <Button Content="Button"/>
            <TextBox Height="23" TextWrapping="Wrap" Text="TextBox"/>

        </StackPanel>


    </Grid>
</Window>
